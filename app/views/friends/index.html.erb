<p style="color: green"><%= notice %></p>

<h1>Friends</h1>
<div class = "container">
<table id="friends" class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Show</th>
      <th>Delete<th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= link_to "Show Friend", friend %></td>
        <td><%= button_to "Delete Friend", friend,method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
